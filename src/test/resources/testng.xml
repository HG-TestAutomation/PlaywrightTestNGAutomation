<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Playwright Tests" parallel="tests" thread-count="3">
    <test name="Homepage Tests for Chromium">
        <parameter name="browserType" value="chromium"/>
        <classes>
            <class name="tests.HomepageTests"/>
        </classes>
    </test>
    <test name="Homepage Tests for Firefox">
        <parameter name="browserType" value="firefox"/>
        <classes>
            <class name="tests.HomepageTests"/>
        </classes>
    </test>
    <test name="Homepage Tests for Webkit">
        <parameter name="browserType" value="webkit"/>
        <classes>
            <class name="tests.HomepageTests"/>
        </classes>
    </test>
</suite>
